{
  "root": true,
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "plugins": [
    "@typescript-eslint",
    "eslint-plugin-tsdoc",
    "eslint-plugin-neverthrow"
  ],
  "parserOptions": {
    "project": "./tsconfig.eslint.json"
  },
  "rules": {
    "@typescript-eslint/consistent-type-definitions": ["error", "interface"],
    "no-console": "off",
    "indent": ["error", 2],
    "tsdoc/syntax": "warn"
  }
}
